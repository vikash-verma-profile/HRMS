@model HRMS.Models.Attendance
@{
    ViewBag.Title = "Index";
    var submitbtnValue = (Model.IsCheckedIn) ?"Check out": "Check In";
}

<div class="card mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Mark Attendance</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.IsCheckedIn)
            <button type="submit" class="btn btn-primary">@submitbtnValue</button>
        }
    </div>
</div>


