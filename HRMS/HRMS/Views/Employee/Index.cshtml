@model HRMS.Models.Employee
@{
    ViewBag.Title = "Index";
}

<div class="card mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Create Employee</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {

            <div class="form-group">
                <label for="exampleInputEmail1">Employee Name</label>
                @Html.EditorFor(model => model.EmployeeName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter  your name" } })
            </div>

            <div class="form-group">
                <label for="DepartmentId">Department</label>
                @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.departmentlist, "Id", "DepartmentName"),
                new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Gender">Gender</label>
                @Html.DropDownListFor(model => model.Gender, new SelectList(ViewBag.genderList, "Id", "Name"),
                new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Gender">Date of birth</label>
                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control datepicker", @placeholder = "Enter  your date of birth" } })
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</div>
<script>
    $('.datepicker').datepicker();
</script>

